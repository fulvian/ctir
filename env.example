# CTIR Environment Configuration
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
DB_PATH=./local-development/ctir.db

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# Default Models (must be available in Ollama)
DEFAULT_DEBUG_MODEL=qwen2.5-coder:7b
DEFAULT_GENERATION_MODEL=qwen2.5-coder:7b
DEFAULT_FORMATTING_MODEL=qwen2.5-coder:7b

# Claude Code Integration (optional for CCR/cc-sessions)
CLAUDE_API_KEY=your_claude_api_key_here
TOKEN_BUDGET_LIMIT=100000

# OpenRouter Integration (replaces Gemini)
OPEN_ROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_DAILY_REQ_LIMIT=1000
CTIR_RATE_LIMIT_BUFFER=0.8

# Integration Paths
CCR_PATH=./submodules/claude-code-router
CC_SESSIONS_PATH=./submodules/cc-sessions

# MCP Server Configuration
MCP_SERVER_PORT=3001
WEBSOCKET_PORT=3002

# Auto-Resume Configuration
AUTO_RESUME_ENABLED=true
BACKUP_INTERVAL_SECONDS=30
MAX_RESUME_ATTEMPTS=3

# Performance Tuning
MAX_LATENCY_MS=2000
MAX_MEMORY_USAGE=1GB
CACHE_SIZE=256MB
