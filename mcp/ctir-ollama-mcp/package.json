{
  "name": "ctir-ollama-mcp",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "CTIR MCP server delegating coding tasks to local Ollama models",
  "bin": {
    "ctir-ollama-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "debug": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "test:e2e": "tsx src/test-e2e.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "ollama": "^0.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "shx": "^0.3.4",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0",
    "@types/node": "^22.0.0",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
